<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="entity.Book" table="Book" schema="ssh">
        <id name="id" column="id">
            <generator class="native"/>
        </id>
        <property name="name" column="name" length="64"/>
        <property name="tag" column="tag"/>
        <property name="price" column="price"/>
        <many-to-one name="author" column="author" cascade="all"/>
        <many-to-one name="press" column="press" cascade="all"/>
    </class>
</hibernate-mapping>