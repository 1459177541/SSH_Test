<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="entity.Author" table="Author" schema="ssh">
        <id name="id" column="id"/>
        <property name="name" column="name" length="16"/>
        <property name="birthday" column="birthday"/>
        <property name="address" column="address" length="128"/>
        <property name="introduction" column="introduction" length="512"/>
        <set name="books">
            <key column="author"/>
            <one-to-many class="entity.Book"/>
        </set>
    </class>
</hibernate-mapping>