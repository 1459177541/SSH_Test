<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="entity.User" table="user" schema="ssh">
        <id name="id" column="id">
            <generator class="native"/>
        </id>
        <property name="name" column="name" length="32"/>
        <property name="password" column="password" length="32"/>
        <property name="email" column="email" length="64"/>
        <set name="powers" table="UserGroundMap">
            <key column="uid"/>
            <many-to-many class="entity.Power" column="pid"/>
        </set>
    </class>
</hibernate-mapping>