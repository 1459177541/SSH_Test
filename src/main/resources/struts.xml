<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>

    <constant name="struts.i18n.encoding" value="UTF-8"/>
    <constant name="struts.configuration.xml.reload" value="true"/>

    <package name="login" namespace="/login" extends="struts-default">
        <action name="login" class="action.UserAction" method="login">
            <result name="success" type="redirect">/index.jsp</result>
            <result name="input">/login/login.jsp</result>
        </action>
        <action name="registerView" class="action.UserAction" method="registerView">
            <result name="success">/login/register.jsp</result>
        </action>
        <action name="register" class="action.UserAction" method="register">
            <result name="input">/login/register.jsp</result>
            <result name="success">/login/registerSuccess.jsp</result>
        </action>
    </package>

</struts>